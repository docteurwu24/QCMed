#:kivy 2.0.0

<HomeScreen>:
    canvas.before:
        Color:
            rgba: 0.07, 0.14, 0.21, 1  # Harmonisation avec GameOverScreen
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: 40
        spacing: 30

        Label:
            id: welcome_label
            text: "QCMed"
            font_size: '36sp'
            color: 1, 1, 1, 1
            size_hint_y: None
            height: '100dp'
            bold: True
            italic: True

        Spinner:
            id: theme_spinner
            text: 'Choisir un thème'
            values: []
            font_size: '22sp'
            size_hint: 0.7, None
            height: '70dp'
            pos_hint: {'center_x': 0.5}
            background_color: 0.05, 0.15, 0.3, 1  # Harmonisation avec OptionButton
            color: 0.9, 0.9, 0.95, 1
            canvas.before:
                Color:
                    rgba: 0.2, 0.4, 0.8, 0.3
                RoundedRectangle:
                    pos: self.x - 5, self.y - 5
                    size: self.width + 10, self.height + 10
                    radius: [15]

        Button:
            id: start_button
            text: "Démarrer"
            on_release: root.start_game(theme_spinner.text)
            font_size: '24sp'
            size_hint: 0.7, None
            height: '70dp'
            pos_hint: {'center_x': 0.5}
            background_color: 0.1, 0.5, 0.2, 1  # Vert plus foncé
            color: 0.9, 0.9, 0.95, 1
            canvas.before:
                Color:
                    rgba: 0.2, 0.8, 0.4, 0.3 if self.state == 'normal' else 0.3, 1, 0.5, 0.6  # Effet survol
                Line:
                    width: 1.5
                    rounded_rectangle: self.x-5, self.y-5, self.width+10, self.height+10, 15
                Color:
                    rgba: self.background_color
                RoundedRectangle:
                    pos: self.x - 5, self.y - 5
                    size: self.width + 10, self.height + 10
                    radius: [15]
