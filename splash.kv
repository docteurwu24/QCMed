#:kivy 2.0.0

<SplashScreen>:
    canvas.before:
        Color:
            rgba: 0.07, 0.14, 0.21, 1 # MÃªme fond que HomeScreen
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: 40
        spacing: 30
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        size_hint: 0.8, 0.3

        Label:
            text: "QCMed"
            font_size: '48sp'
            color: 1, 1, 1, 1
            bold: True
            italic: True

        Label:
            text: "Chargement..."
            font_size: '20sp'
            color: 0.8, 0.8, 0.8, 1
